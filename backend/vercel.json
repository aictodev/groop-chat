{
    "version": 2,
    "functions": {
        "api/index.js": {
            "includeFiles": "prompts/**",
            "maxDuration": 60
        },
        "api/debug.js": {
            "maxDuration": 10
        }
    },
    "rewrites": [
        {
            "source": "/debug",
            "destination": "/api/debug"
        },
        {
            "source": "/(.*)",
            "destination": "/api/index.js"
        }
    ]
}