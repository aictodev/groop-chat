{
  "version": 2,
  "installCommand": "npm install",
  "functions": {
    "api/index.js": {
      "includeFiles": "{prompts/**,controllers/**,node_modules/**,database.js,auth.js}",
      "maxDuration": 60
    },
    "api/debug.js": {
      "includeFiles": "node_modules/**",
      "maxDuration": 10
    },
    "api/test_deps.js": {
      "includeFiles": "node_modules/**",
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/test-deps",
      "destination": "/api/test_deps"
    },
    {
      "source": "/debug",
      "destination": "/api/debug"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.js"
    }
  ]
}